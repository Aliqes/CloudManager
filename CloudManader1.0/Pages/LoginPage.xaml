<local:BasePage
    x:Class="CloudManager.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cef="clr-namespace:CefSharp.Wpf;assembly=CefSharp.Wpf"
    xmlns:core="clr-namespace:CloudManager.Core;assembly=CloudManager.Core"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CloudManager"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="LoginPage"
    d:DesignHeight="61.5"
    d:DesignWidth="111.75"
    x:TypeArguments="core:LoginPageViewModel"
    Unloaded="BasePage_Unloaded"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Command="{Binding ClosePage}" />
        <cef:ChromiumWebBrowser
            x:Name="browser"
            Grid.Row="1"
            Address="{Binding Uri}"
            FrameLoadEnd="Browser_FrameLoadEnd" />
    </Grid>
</local:BasePage>
