<Window
    x:Class="CloudManader1._0.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:control="clr-namespace:CloudManader1._0.Resources.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CloudManader1._0"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="AppWindow"
    Title="MainWindow"
    Width="800"
    Height="450"
    AllowsTransparency="True"
    Loaded="AppWindow_Loaded"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Window.Background>
        <ImageBrush ImageSource="../images/mainWindowImades/Mountains.jpg" />
    </Window.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid Grid.ColumnSpan="2" Background="#FF131B2C" MouseLeftButtonDown="DragWindowHeader">
            <Grid.InputBindings>
                <MouseBinding Gesture="LeftDoubleClick" Command="{Binding WindowHeaderInteraction}"/>
            </Grid.InputBindings>
            <StackPanel
                Height="20"
                Margin="0,0,10,0"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <Button
                    Width="15"
                    Height="15"
                    Margin="0,0,20,0"
                    Command="{Binding MinimizeWindowCommand}"
                    Style="{StaticResource NoChromeButton}">
                    <ContentControl
                        Width="8"
                        Height="8"
                        Content="{Binding Source={StaticResource MinimizeBtn}}" />
                </Button>
                <Button
                    Width="15"
                    Height="15"
                    Margin="0,0,20,0"
                    Padding="0"
                    Command="{Binding MaximizeWindowCommand}"
                    Style="{StaticResource NoChromeButton}">
                    <ContentControl
                        Width="8"
                        Height="8"
                        Content="{Binding Source={StaticResource ExpandBtn}}" />
                </Button>
                <Button
                    Width="15"
                    Height="15"
                    Padding="0"
                    Command="{Binding CloseWindowCommand}"
                    Style="{StaticResource NoChromeButton}">
                    <ContentControl
                        Width="8"
                        Height="8"
                        Content="{Binding Source={StaticResource CloseBtn}}" />
                </Button>
            </StackPanel>
        </Grid>

        <Grid
            Grid.Row="1"
            Background="#FF131B2C"
            Opacity="0.8">
            <StackPanel>
                <control:RippleButton
                    Height="40"
                    Content="Menu1"
                    FontFamily="Tahoma"
                    FontSize="14"
                    FontWeight="Bold"
                    Foreground="White" />
                <control:RippleButton
                    Height="40"
                    Content="Menu2"
                    FontFamily="Tahoma"
                    FontSize="14"
                    FontWeight="Bold"
                    Foreground="White" />
                <control:RippleButton
                    Height="40"
                    Content="Menu3"
                    FontFamily="Tahoma"
                    FontSize="14"
                    FontWeight="Bold"
                    Foreground="White" />
                <control:RippleButton
                    Height="40"
                    Content="Menu4"
                    FontFamily="Tahoma"
                    FontSize="14"
                    FontWeight="Bold"
                    Foreground="White" />
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.Background>
                <SolidColorBrush Opacity="0.85" Color="#EDF1F4" />
            </Grid.Background>
            <Grid Margin="15" Background="#EDF1F4" />
        </Grid>
    </Grid>
