<Window
    x:Class="CloudManager.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:CloudManader.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CloudManager"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="AppWindow"
    Title="MainWindow"
    Width="800"
    Height="450"
    AllowsTransparency="True"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <WindowChrome.WindowChrome>
        <WindowChrome
            CaptionHeight="{Binding TitleHeight}"
            CornerRadius="0"
            GlassFrameThickness="0"
            ResizeBorderThickness="{Binding ResizeBorderThikness}" />
    </WindowChrome.WindowChrome>
    <Window.Resources>
        <Style TargetType="{x:Type local:MainWindow}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Window}">
                        <Border Padding="{Binding OuterMarginSizeThikness, FallbackValue=1}">
                            <Grid>
                                <Border Background="{Binding ForegroundLightBrush, FallbackValue=White}" CornerRadius="{Binding WindowCornerRadius}">
                                    <Border.Effect>
                                        <DropShadowEffect Opacity="0.2" ShadowDepth="0" />
                                    </Border.Effect>
                                </Border>

                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="{Binding TitleHeigthGridLine, FallbackValue=20}" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>

                                    <Grid Grid.Column="0" Panel.ZIndex="1">
                                        <Grid.ColumnDefinitions>

                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="2" Orientation="Horizontal">
                                            <Button
                                                Width="{Binding RelativeSource={RelativeSource Mode=Self}, Path=ActualHeight}"
                                                Command="{Binding MinimizeWindowCommand}"
                                                RenderTransformOrigin="0.5,0.76"
                                                Style="{StaticResource NoChromeButton}"
                                                WindowChrome.IsHitTestVisibleInChrome="True">
                                                <ContentControl Width="10" Height="10" />
                                            </Button>
                                            <Button
                                                Width="{Binding RelativeSource={RelativeSource Mode=Self}, Path=ActualHeight}"
                                                Padding="0"
                                                Command="{Binding MaximizeWindowCommand}"
                                                Style="{StaticResource NoChromeButton}"
                                                WindowChrome.IsHitTestVisibleInChrome="True">
                                                <ContentControl Width="10" Height="10" />
                                            </Button>
                                            <Button
                                                Width="{Binding RelativeSource={RelativeSource Mode=Self}, Path=ActualHeight}"
                                                Padding="0"
                                                Command="{Binding CloseWindowCommand}"
                                                Style="{StaticResource NoChromeButton}"
                                                WindowChrome.IsHitTestVisibleInChrome="True">
                                                <ContentControl Width="10" Height="10" />
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                    <Border Grid.Row="2">
                                        <ContentPresenter Content="{TemplateBinding Content}" />
                                    </Border>
                                </Grid>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Background="{StaticResource BackgroundLightBrush}" ClipToBounds="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="170" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="220" />
        </Grid.ColumnDefinitions>
        <Grid>
            <Border
                Margin="10"
                Background="{StaticResource DiskListBackgroundBrush}"
                CornerRadius="15">
                <ListBox
                    Padding="0"
                    Background="Transparent"
                    BorderThickness="0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Height="90"
                                Margin="8"
                                Background="{StaticResource NoSelectedDriveBrush}"
                                CornerRadius="10">
                                <Grid Margin="10" VerticalAlignment="Stretch">
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <Grid Grid.Row="0" Margin="0,0,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Grid}, Path=ActualHeight}" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Border
                                            Grid.Column="0"
                                            BorderBrush="{StaticResource SelectedButtonBorderColorBrush}"
                                            BorderThickness="1"
                                            CornerRadius="6" />
                                        <Grid Grid.Column="1" Margin="5,0,0,5">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*" />
                                                <RowDefinition Height="auto" />
                                                <RowDefinition Height="auto" />
                                            </Grid.RowDefinitions>
                                            <TextBlock
                                                Grid.Row="0"
                                                FontSize="9"
                                                Text="Google drive" />
                                            <TextBlock
                                                Grid.Row="1"
                                                Margin="0,0,0,2"
                                                FontSize="8"
                                                Text="1233" />
                                            <TextBlock
                                                Grid.Row="1"
                                                HorizontalAlignment="Right"
                                                FontSize="8"
                                                Text="1233" />
                                            <ProgressBar
                                                Grid.Row="2"
                                                Grid.Column="1"
                                                VerticalAlignment="Bottom" />
                                        </Grid>
                                    </Grid>
                                    <Border
                                        Grid.Row="1"
                                        Margin="0,8,0,0"
                                        BorderBrush="{StaticResource SelectedButtonBorderColorBrush}"
                                        BorderThickness="1"
                                        CornerRadius="13">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="{Binding RelativeSource={RelativeSource AncestorType=Border}, Path=ActualHeight}" />
                                                <ColumnDefinition />
                                                <ColumnDefinition />
                                            </Grid.ColumnDefinitions>
                                            <Border
                                                Margin="-1"
                                                Background="{StaticResource NoSelectedDriveBrush}"
                                                BorderBrush="{StaticResource SelectedButtonBorderColorBrush}"
                                                BorderThickness="1"
                                                CornerRadius="{Binding RelativeSource={RelativeSource AncestorType=Grid}, Path=ActualHeight}">
                                                <Image />
                                            </Border>
                                            <StackPanel
                                                Grid.Column="1"
                                                Margin="5,0,0,0"
                                                VerticalAlignment="Center">
                                                <TextBlock FontSize="6" Text="Picture" />
                                                <TextBlock FontSize="6" Text="125.5" />
                                            </StackPanel>
                                            <Border
                                                Grid.Column="2"
                                                Margin="2"
                                                Background="{StaticResource NoSelectedDriveBrush}"
                                                BorderBrush="{StaticResource SelectedButtonBorderColorBrush}"
                                                BorderThickness="1"
                                                CornerRadius="10">
                                                <TextBlock
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    FontSize="6"
                                                    Text="Upload" />
                                            </Border>
                                        </Grid>
                                    </Border>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Border>
        </Grid>

    </Grid>
</Window>
