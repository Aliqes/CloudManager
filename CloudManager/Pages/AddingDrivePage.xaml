             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CloudManager"
             xmlns:core="clr-namespace:CloudManager.Core;assembly=CloudManager.Core"
              x:TypeArguments="core:AddingDriveViewModel"         
             mc:Ignorable="d" d:DesignWidth="604.7" d:DesignHeight="311.05" Background="{StaticResource BackgroundLightBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <TextBlock Text="Please select the drive type" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center" Style="{StaticResource BaseTextBlockStyle}"/>
        </Grid>
        <Grid Grid.Row="1">
            
        </Grid>
    </Grid>
</local:BasePage>
