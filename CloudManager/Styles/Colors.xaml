<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:CloudManager.Styles">
    <Color x:Key="BackgroundLight">#efefef</Color>
    <SolidColorBrush x:Key="BackgroundLightBrush" Color="{StaticResource BackgroundLight}" />

    <Color x:Key="DiskListBackground">#E4E4E5</Color>
    <SolidColorBrush x:Key="DiskListBackgroundBrush" Color="{StaticResource DiskListBackground}" />

    <Color x:Key="SelectedButtonBorderColor">#CDCDE3</Color>
    <SolidColorBrush x:Key="SelectedButtonBorderColorBrush" Color="{StaticResource SelectedButtonBorderColor}" />

    <Color x:Key="AddButtonColor">#D5D5E3</Color>
    <SolidColorBrush x:Key="AddButtonColorBrush" Color="{StaticResource AddButtonColor}" />

    <Color x:Key="MainIconColor">#6A63E9</Color>
    <SolidColorBrush x:Key="MainIconColorBrush" Color="{StaticResource MainIconColor}" />

    <Color x:Key="SelectedDrive">#5E56E8</Color>
    <SolidColorBrush x:Key="SelectedDriveBrush" Color="{StaticResource SelectedDrive}" />

    <Color x:Key="NoSelectedDrive">#FAFAFA</Color>
    <SolidColorBrush x:Key="NoSelectedDriveBrush" Color="{StaticResource NoSelectedDrive}" />
    
    
</ResourceDictionary>